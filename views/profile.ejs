<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">


    <title>Profile</title>

    <style type="text/css">

    .navbar-brand{
      font-weight: bold;
      font-size: 30px;
    }

    #main{
      width:800px;
      margin: 0 28%;
    }

    #nav_bar{

      width:800px;
      background-color: #8FDBF2;
      border-radius: 10px;
      margin: 10px 0;

    }

    #image_div{

      float: left;
    }

    #profile_pic{

      width:380px;
      height:400px;
      object-fit: cover;
      border-radius: 10px;
      margin-left: 5px;
      margin-top: 10px;



    }

    #right_column{


      width:400px;
      height:400px;
      float: right;
      margin-left: 5px;
      background-color: #DFECF0;
      border-radius: 10px;
      margin-top: 10px;


    }

    #left_column{

      margin-top: 20px;
      width:800px;
      float:left;
      border-radius: 10px;

      background-color: #DFECF0;

    }

    #info_row{

      margin-left: 20px;
      margin-top: 15px;



    }

    .post_pic{
      width:50px;
      height:50px;
      margin-left: 5px;


    }

    .each_post{
      margin-left: 10px;
      margin-top: 8px;


    }


    .fa-edit{

      font-size: 30px;
      vertical-align: middle;

    }

    #button_group{

      width: 800px;
      float:left;

      margin-top: 20px;
      margin-left: 10px;


    }

    .btn-primary{
      width:120px;
      font-size: 11px;
    }

    #post_title{

      margin-left: 10px;
    }

    </style>

  </head>


  <body>


    <div id="main">

      <nav id="nav_bar" class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/">Highlander</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">

            <li class="nav-item active">
              <a class="nav-link" href="/explore/default">Explore <span class="sr-only">(current)</span></a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/sign_in">Sign In</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/sign_out">Sign Out</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>

          </ul>
        </div>
    </nav>



    <h1>User Profile</h1>


    <div id="image_div">

      <img id="profile_pic" src="<%-user.image%>">

    </div>


    <div id="right_column">



        <% posts.forEach(function(post){ %>

          <div class="each_post">
            <a href="/post_update/<%=post.post_id%>"><i class="fas fa-edit"></i></a><a href="/post_detail/<%=post.post_id%>"><img src="<%=post.image_1%>" class="rounded post_pic"/><span id="post_title"><%=post.title%></span></a>
          </div>


        <%}); %>



    </div>



    <div id="button_group">



    <a class="btn btn-primary" href="/create_post" role="button">Create a New Post</a>
    <a class="btn btn-primary" href="/update_profile" role="button">Update Profile</a>
    <a class="btn btn-primary" href="/new_password" role="button">Change Password</a>

      </div>






        <div id="left_column">



            <div id="info_row">

              <div>
                <p>  <%- user.user_name %>  </p>

              </div>
              <div>
                <p>  <%- user.about %>  </p>


              </div>
              <div >
                <p>  <%- user.created %>  </p>

              </div>

            </div>




        </div>







    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
